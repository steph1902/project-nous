{
  "name": "nous",
  "version": "0.1.0",
  "private": true,
  "description": "Agent-Led Workflow Orchestrator with Multi-Agent + RAG + HR Scoring",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:unit": "turbo test:unit",
    "test:integration": "turbo test:integration",
    "test:e2e": "turbo test:e2e",
    "dev:infra": "docker-compose up -d",
    "dev:infra:down": "docker-compose down",
    "db:migrate": "pnpm --filter @nous/api db:migrate",
    "db:seed": "pnpm --filter @nous/api db:seed",
    "db:studio": "pnpm --filter @nous/api db:studio",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}